<h2>Sign Up</h2>

<form>
  <label>
  Username
  <input name="user[username]" value="<%= user.escape('username')  %>">
  </label>
  <label>
  Email
  <input name="user[email]" value="<%= user.escape('email')  %>">
  </label>
  <label>
  Password
  <input type="password" name="user[password]">
  </label>

  <button>Create Account</button>
</form>
